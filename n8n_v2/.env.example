# -------------------------------------
# Domain & SSL
# -------------------------------------
N8N_HOST=n8n.yourdomain.com
LETS_ENCRYPT_EMAIL=your-email@example.com
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# -------------------------------------
# n8n Core Settings
# -------------------------------------
N8N_ENCRYPTION_KEY=generate-with-openssl-rand-base64-32
N8N_LICENSE_ACTIVATION_KEY=your-license-key-if-applicable

# -------------------------------------
# Database & Redis Credentials
# -------------------------------------
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=n8n
REDIS_PASSWORD=your-secure-redis-password

# -------------------------------------
# Task Runners (Python + JS support)
# -------------------------------------
N8N_RUNNERS_ENABLED=true
N8N_RUNNERS_AUTH_TOKEN=generate-with-openssl-rand-hex-32

# -------------------------------------
# Generic Settings
# -------------------------------------
TZ=America/New_York
N8N_TRUSTED_PROXIES=172.16.0.0/12
OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true
NODE_ENV=production

# -------------------------------------
# Docker Compose project name
# -------------------------------------
COMPOSE_PROJECT_NAME=n8n-compose

# -------------------------------------
# Optional: Plaid Integration
# -------------------------------------
# PLAID_CLIENT_ID=your-plaid-client-id
# PLAID_PRODUCTION_SECRET=your-plaid-secret
# PLAID_HOST=plaid.yourdomain.com

# -------------------------------------
# Optional: Claude/Anthropic API
# -------------------------------------
# ANTHROPIC_API_KEY=your-anthropic-api-key
